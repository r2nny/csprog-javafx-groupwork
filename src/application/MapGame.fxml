<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox onKeyPressed="#keyAction" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MapGameController">
  
  <children>
      <HBox fx:id="top_bar" />
    <HBox fx:id="menu_bar" alignment="TOP_CENTER">
      <children>
	<Button fx:id="f1" onAction="#func1ButtonAction" prefWidth="36.0" text="F1" />
	<Button fx:id="f2" onAction="#func2ButtonAction" prefWidth="36.0" text="F2" />
	<Button fx:id="f3" onAction="#func3ButtonAction" prefWidth="36.0" text="F3" />
	<Button fx:id="f4" onAction="#func4ButtonAction" prefWidth="36.0" text="F4" />
      </children>
    </HBox>
      <HBox alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <Label fx:id="metadataLabel" alignment="CENTER" text="Name : NONE" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER">
         <children>
            <Label fx:id="noticeLabel" alignment="CENTER" prefHeight="30.0" text="..." />
         </children>
      </HBox>
      <HBox fx:id="heart_bar" alignment="CENTER">
         <children>
            <ImageView fx:id="heart1" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ImageView>
            <ImageView fx:id="heart2" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ImageView>
            <ImageView fx:id="heart3" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ImageView>
            <ImageView fx:id="heart4" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ImageView>
            <ImageView fx:id="heart5" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></ImageView>
            <ImageView fx:id="heart6" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
    <GridPane fx:id="mapGrid">
    </GridPane>

  </children>
</VBox>
